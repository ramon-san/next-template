{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard", "prettier", "plugin:react/recommended", "plugin:@typescript-eslint/recommended", "next"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier", "react"],
  "rules": {
    "camelcase": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
